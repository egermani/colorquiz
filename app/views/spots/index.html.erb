<p id="notice"><%= notice %></p>

<h1>Listing Spots</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Color</th>
      <th># Guesses</th>
      <th>Avg. L-Delta</th>
      <th>X</th>
      <th>Y</th>
      <th>Radius</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spots.each do |spot| %>
      <tr>
        <td><%= image_tag spot.image.img.url(:thumb) %></td>
        <%= content_tag :td, "", style: "background-color: #{spot.color}" %>
        <td><%= spot.guesses.color.count %></td>
        <td><%= spot.calculate_l_par %></td>
        <td><%= spot.calculate_par %></td>
        <td><%= spot.x %></td>
        <td><%= spot.y %></td>
        <td><%= spot.radius %></td>
        <td><%= link_to 'Show', spot %></td>
        <% if current_user.try(:admin?) %>
          <td><%= link_to 'Edit', edit_spot_path(spot) %></td>
          <td><%= link_to 'Destroy', spot, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

